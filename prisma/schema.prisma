generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId        String             @id @unique @default(uuid())
  firstName     String
  lastName      String
  email         String             @unique
  password      String
  phone         String?            @unique
  organisations OrganisationUser[]
}

model Organisation {
  orgId       String             @id @unique @default(uuid())
  name        String
  description String?
  users       OrganisationUser[]
}

model OrganisationUser {
  userId String
  orgId  String

  user User         @relation(fields: [userId], references: [userId])
  org  Organisation @relation(fields: [orgId], references: [orgId])

  @@id([userId, orgId])
}
